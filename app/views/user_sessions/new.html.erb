<div class="login-form">
	<h3>Login</h3>
  <hr />
  <div id="login_form" >
  	<fieldset>  	
  	<%= simple_form_for @user_session, :url => {:action => "create"}, :html => { :class => "form-horizontal" } do |f| %>
	   <%= f.input :login, :label => false, :placeholder => "email",  :error => false , :input_html => { class: 'input-login' }  %>
	   <%= f.input :password, :label => false, :placeholder => "password", :error => false ,  :input_html => { class: 'input-login' }  %>
       <%= link_to "Forgot password?" , "#"%>       
       <div>
       <%= f.submit "Login" , :class => "btn btn-primary btn-form" %>
       <%= f.input :remember_me, as: :boolean   %>
       	
       </div>     
    <% end %>
    </fieldset>    
   
  </div>    
</div>
